<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="108dp"
    android:layout_height="276dp"
    android:background="@drawable/service_brd"
    android:elevation="10dp"
    android:orientation="vertical"
    android:animateLayoutChanges="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@drawable/service_tag"
        android:elevation="6dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/recmoveBtn"
            style="?android:buttonBarButtonStyle"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#505050"
            android:text=""
            android:textColor="#eeeeee" />

        <Button
            android:id="@+id/recbackBtn"
            style="?android:buttonBarButtonStyle"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/back"
            android:textColor="#eeeeee" />

    </LinearLayout>

    <Button
        android:id="@+id/recpsBtn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@mipmap/play"
        android:text="" />

    <TextView
        android:id="@+id/recnametextView"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginEnd="6dp"
        android:textAlignment="viewEnd"
        android:text="20170503112314"
        android:textColor="#eeeeee"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/rectimetextView"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:textAlignment="viewEnd"
        android:layout_marginEnd="6dp"
        android:text="13:14"
        android:textColor="#eeeeee"
        android:textSize="12sp"/>


</LinearLayout>