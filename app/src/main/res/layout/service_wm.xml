<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="108dp"
    android:layout_height="276dp"
    android:background="@drawable/service_brd"
    android:elevation="10dp"
    android:orientation="vertical" >

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_height="36dp"
        android:layout_width="match_parent"
        android:background="@drawable/service_tag"
        android:elevation="6dp" >

        <Button
            android:text=""
            android:id="@+id/moveBtn"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:layout_width="60dp"
            android:textColor="#eeeeee"
            android:textAllCaps="false"/>

        <Button
            android:text="x"
            android:id="@+id/closeBtn"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:layout_width="48dp"
            android:textColor="#eeeeee"
            android:textAllCaps="false"/>
    </LinearLayout>

    <ListView
        android:layout_height="match_parent"
        android:id="@+id/listView"
        android:layout_width="match_parent" />

    <TextView
        android:text="@string/transsetting"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/transtextView"
        android:textAlignment="center"
        android:gravity="center"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/transseekBar" />

    <TextView
        android:text="@string/brife"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/brifetextView"
        android:textAlignment="center"
        android:gravity="center" />

</LinearLayout>